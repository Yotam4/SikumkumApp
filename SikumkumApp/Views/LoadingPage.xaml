             x:Class="SikumkumApp.Views.LoadingPage"
             FlowDirection="RightToLeft">
    <ContentPage.Content>
        <StackLayout BackgroundColor="White">

            
            <Image Source="logoFull.png" VerticalOptions="Start" WidthRequest="400" HeightRequest="400" Margin="15,0,0,0"
                HorizontalOptions="Center"/>

            <Label Text="הקומקום מתחמם..." FontSize="18" Margin="0,140,0,0" Style="{StaticResource Headers}" TextDecorations="None"
