<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SikumkumApp.Views.SubjectPage"
             x:Name="SubjectPageName">
    <ContentPage.Content>
        <StackLayout>
            <Grid ColumnSpacing="0" RowSpacing="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="12"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                </Grid.ColumnDefinitions>
                <Label Text="סיכומים" FontSize="12" Style="{StaticResource Headers}" Grid.Column="0" Grid.Row="0" IsEnabled="True" HorizontalOptions="Center" />
                <CheckBox IsChecked="{Binding GetSummary}" Grid.Column="0" Grid.Row="1" HorizontalOptions="Center"/>

                <Label Text="תרגולים" FontSize="12" Style="{StaticResource Headers}" Grid.Column="1" Grid.Row="0" HorizontalOptions="Center"/>
                <CheckBox IsChecked="{Binding GetPractice}" Grid.Column="1" Grid.Row="1" HorizontalOptions="Center" />

                <Label Text="מטלות" FontSize="12" Style="{StaticResource Headers}" Grid.Column="2" Grid.Row="0" HorizontalOptions="Center" />
                <CheckBox IsChecked="{Binding GetEssay}" Grid.Column="2" Grid.Row="1" HorizontalOptions="Center" />

                <Button Text="חפש" Style="{StaticResource ButtonStyle}" Grid.Column="3" Grid.Row="1" Command="{Binding SearchCommand}" HeightRequest="50"  />
            </Grid>
            
            <Label Text="{Binding ErrorEmpty}" IsVisible="{Binding IsEmpty}" Style="{StaticResource WarningsStyle}" />
            
            <CollectionView ItemsSource="{Binding files}" >
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Button Text="{Binding files.Headline}" Command="{Binding Source={x:Reference SubjectPageName}, Path=BindingContext.ClickedOnFile}" Style="{StaticResource Key=Subjects}"  />
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>