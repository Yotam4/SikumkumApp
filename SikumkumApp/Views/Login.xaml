<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SikumkumApp.Views.Login">
    <ContentPage.Resources>
        <ResourceDictionary>
            <Style x:Key="Inputs" TargetType="Entry">
                <Setter Property="BackgroundColor" Value="AliceBlue"/>
            </Style>
            <Style x:Key="Buttons" TargetType="Button">
                <Setter Property="BorderWidth" Value="1"/>
                <Setter Property="BorderColor" Value="White"/>
                <Setter Property="BackgroundColor" Value="Black"/>
                <Setter Property="TextColor" Value="White"/>
            </Style>
        </ResourceDictionary>
    </ContentPage.Resources>
    <ContentPage.Content>
        <StackLayout>

            <Label Text="Enter Username:"/>
            <Entry Placeholder="Username" Text="{Binding Username}"/>
            
            <Label Text="Enter Password:"/>
            <Entry Placeholder="Password" IsPassword="True" Text="{Binding Password}"/>

            <Button Text="Login" Command="{Binding LoginCommand}" HorizontalOptions="Center" VerticalOptions="Center" BorderWidth="2" BorderColor="Black"/>

            <Button Text="SignUp" Command="{Binding ToSignUp}" HorizontalOptions="Center" VerticalOptions="Center" BorderWidth="2" BorderColor="Beige"/>


        </StackLayout>
    </ContentPage.Content>
</ContentPage>