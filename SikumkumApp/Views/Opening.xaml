<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SikumkumApp.Views.Opening">
    <ContentPage.Content>
        <StackLayout>
            <CollectionView ItemsSource="{Binding subjectsCollec}">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                            <Button Text="{Binding SubjectName}" HorizontalOptions="StartAndExpand" HeightRequest="75" BorderColor="Black" Command="{Binding ClickedOnSubjectCommand}" BackgroundColor="White" FontFamily="Luminari"/>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </StackLayout>
        
    </ContentPage.Content>
</ContentPage>