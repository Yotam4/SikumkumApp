<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SikumkumApp.Views.UserFiles"
             x:Name="UserFilesPage">
    <ContentPage.Content>
        <StackLayout>
            <CollectionView ItemsSource="{Binding userFiles}" >
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Grid Padding="3">

                            <Button Text="{Binding userFiles.Headline}" Command="{Binding Source={x:Reference UserFilesPage}, Path=BindingContext.OpenSikumFilesCommand}" Style="{StaticResource Key=Subjects}"  />
                            <Button Text="מחיקה" Command="{Binding Source={x:Reference UserFilesPage}, Path=BindingContext.OpenSikumFilesCommand}" />

                        </Grid>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
            
            
        </StackLayout>
    </ContentPage.Content>
</ContentPage>