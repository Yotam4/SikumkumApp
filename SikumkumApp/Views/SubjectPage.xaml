<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SikumkumApp.Views.SubjectPage"
             FlowDirection="RightToLeft"
             x:Name="SubjectPageName">
    <ContentPage.Content>
        <StackLayout>
            <Grid ColumnSpacing="0" RowSpacing="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="12"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                </Grid.ColumnDefinitions>

                <Label Text="תקופת לימוד" FontSize="12" Style="{StaticResource Headers}" Grid.Column="0" Grid.Row="0" HorizontalOptions="CenterAndExpand"/>
                <Picker  ItemsSource="{Binding StudyYearList}" SelectedIndex ="{Binding StudyYears}" Grid.Column="0" Grid.RowSpan="2" Grid.Row="1" FontSize="12"  />

                <Label Text="סיכומים" FontSize="12" Style="{StaticResource Headers}" Grid.Column="1" Grid.Row="0" IsEnabled="True" HorizontalOptions="Center" />
                <CheckBox IsChecked="{Binding GetSummary}" Grid.Column="1" Grid.Row="1" Grid.RowSpan="2" HorizontalOptions="Center"/>

                <Label Text="תרגולים" FontSize="12" Style="{StaticResource Headers}" Grid.Column="2" Grid.Row="0" HorizontalOptions="Center"/>
                <CheckBox IsChecked="{Binding GetPractice}" Grid.Column="2" Grid.Row="1" Grid.RowSpan="2" HorizontalOptions="Center" />

                <Label Text="מטלות" FontSize="12" Style="{StaticResource Headers}" Grid.Column="3" Grid.Row="0" HorizontalOptions="Center" />
                <CheckBox IsChecked="{Binding GetEssay}" Grid.Column="3" Grid.Row="1" Grid.RowSpan="2" HorizontalOptions="Center" />

                <Button Text="חפש"  Style="{StaticResource ButtonStyle}" FontSize="12" Grid.Column="4" Grid.Row="0" Grid.RowSpan="2"  Command="{Binding SearchCommand}" CornerRadius="6"/>
            </Grid>
            
            <Label Text="{Binding ErrorEmpty}" IsVisible="{Binding IsEmpty}" Style="{StaticResource WarningsStyle}" />
            <CollectionView ItemsSource="{Binding files}">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="20"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                            </Grid.ColumnDefinitions>

                            <Button Text="{Binding files.Headline}"  Command="{Binding Source={x:Reference SubjectPageName}, Path=BindingContext.ClickedOnFile}" Style="{StaticResource Key=Subjects}" HorizontalOptions="Center" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2"  />
                            <Label Grid.Row="1" Grid.Column="0" Text="זהו - "  />
                            <Label Grid.Row="1" Grid.Column="1" Text="{Binding files.TypeName}" />

                            <Label Grid.Row="2" Grid.Column="0" Text="הועלה על די משתמש -  "  />
                            <Label Grid.Row="2" Grid.Column="1" Text="{Binding files.Username}" />
                            
                        </Grid>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
                       
        </StackLayout>
    </ContentPage.Content>
</ContentPage>